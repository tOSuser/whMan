ARG ALPINE_VERSION=3.19
FROM alpine:${ALPINE_VERSION}
#
# Nexttop 2023-2025 (nexttop.se)
# MAINTAINER nexttop -> hossein a.t. (osxx.com)
#
LABEL Description="Lightweight container with cli based on Alpine Linux."

ARG ADDRESS
ENV ADDRESS=${WHMAN_IP}

ARG DOCKER_DATA_PATH
ENV DOCKER_DATA_PATH=${DOCKER_DATA_PATH}
ARG ADMINMAIL
ENV ADMINMAIL=${ADMINMAIL}
ARG ADDRESS
ENV ADDRESS=${WHMAN_IP}
ARG NETWORK_BASE
ENV NETWORK_BASE=${NETWORK_BASE}
ARG NETWORK_SUBNET
ENV NETWORK_SUBNET=${NETWORK_SUBNET}
ARG NETWORK_MASK
ENV NETWORK_MASK=${NETWORK_MASK}
ARG NETWORK_GETWAY
ENV NETWORK_GETWAY=${NETWORK_GETWAY}
ARG NSLCD_IP
ENV NSLCD_IP=${NSLCD_IP}
ARG NSCD_IP
ENV NSCD_IP=${NSCD_IP}
ARG CLI_IP
ENV CLI_IP=${CLI_IP}
ARG WHMAN_IP
ENV WHMAN_IP=${WHMAN_IP}
ARG LAM_IP
ENV LAM_IP=${LAM_IP}
ARG LDAP_IP
ENV LDAP_IP=${LDAP_IP}
ARG NODEJS_IP
ENV NODEJS_IP=${NODEJS_IP}
ARG PYTHON3_IP
ENV PYTHON3_IP=${PYTHON3_IP}
ARG OPENJDK_IP
ENV OPENJDK_IP=${OPENJDK_IP}
ARG BIND9_IP
ENV BIND9_IP=${BIND9_IP}
ARG OCSERV_IP
ENV OCSERV_IP=${OCSERV_IP}
ARG COTURN_IP
ENV COTURN_IP=${COTURN_IP}
ARG MYSQL_IP
ENV MYSQL_IP=${MYSQL_IP}
ARG MONGODB_IP
ENV MONGODB_IP=${MONGODB_IP}
ARG REDIS_IP
ENV REDIS_IP=${REDIS_IP}
ARG DYNAMODB_IP
ENV DYNAMODB_IP=${DYNAMODB_IP}
ARG ORIENTDB_IP
ENV ORIENTDB_IP=${ORIENTDB_IP}
ARG NGINX_IP
ENV NGINX_IP=${NGINX_IP}
ARG PHPFPM_IP
ENV PHPFPM_IP=${PHPFPM_IP}
ARG SSH_INTERNAL_PORT
ENV SSH_INTERNAL_PORT=${SSH_INTERNAL_PORT}
ARG SSH_EXTERNAL_PORT
ENV SSH_EXTERNAL_PORT=${SSH_EXTERNAL_PORT}
ARG PHPFPM_DEFAULT_STARTPORT
ENV PHPFPM_DEFAULT_STARTPORT=${PHPFPM_DEFAULT_STARTPORT}
ARG PHPFPM_DEFAULT_ENDPORT
ENV PHPFPM_DEFAULT_ENDPORT=${PHPFPM_DEFAULT_ENDPORT}
ARG PHPFPM_DEFAULT_STARTGID
ENV PHPFPM_DEFAULT_STARTGID=${PHPFPM_DEFAULT_STARTGID}
ARG PHPFPM_DEFAULT_STARTUID
ENV PHPFPM_DEFAULT_STARTUID=${PHPFPM_DEFAULT_STARTUID}
ARG PHPFPM_EXTERNAL_PORT
ENV PHPFPM_EXTERNAL_PORT=${PHPFPM_EXTERNAL_PORT}
ARG NGINX_INTERNAL_PORT
ENV NGINX_INTERNAL_PORT=${NGINX_INTERNAL_PORT}
ARG NGINX_EXTERNAL_PORT
ENV NGINX_EXTERNAL_PORT=${NGINX_EXTERNAL_PORT}

# Add system users/groups
COPY scripts/add-users.sh /tmp/add-users.sh
RUN /tmp/add-users.sh
RUN rm /tmp/add-users.sh

# Setup document root
WORKDIR /

# Install packages and remove default server definition
RUN apk add --no-cache \
  openldap-clients \
  bind-tools \
  nano \
  mc \
  curl \
  bash \
  mysql-client \
  openldap-clients \
  redis \
  && rm -rf /var/cache/apk/*

# Update wmman.conf
COPY whscript /opt/whscript
COPY scripts/pre-setup.sh /tmp/pre-setup.sh
RUN /tmp/pre-setup.sh
RUN rm /tmp/pre-setup.sh

COPY NOTINSTALLED /NOTINSTALLED
COPY docker-entrypoint.sh /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]

CMD ["tail", "-f", "/dev/null"]
